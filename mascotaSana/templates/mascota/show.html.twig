{% extends 'base.html.twig' %}

{% block title %}Mascota{% endblock %}

{% block body %}
<a href="{{ path('app_home_page') }}"><button>Inicio</button></a>
    <h1>Mascota</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mascotum.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ mascotum.nombre }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ mascotum.tipo.nombre }}</td>
            </tr>
            <tr>
                <th>Raza</th>
                <td>{{ mascotum.raza.nombre }}</td>
            </tr>
            <tr>
                <th>Propietario</th>
                <td>{{ mascotum.propietario.nombre }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ mascotum.fecha ? mascotum.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha_nac</th>
                <td>{{ mascotum.fechaNac ? mascotum.fechaNac|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mascota_index') }}"><button>Volver</button></a>

    <a href="{{ path('app_mascota_edit', {'id': mascotum.id}) }}"><button>Editar</button></a>

    {{ include('mascota/_delete_form.html.twig') }}
{% endblock %}
