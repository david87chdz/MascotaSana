{% extends 'base.html.twig' %}

{% block title %}Consulta index{% endblock %}

{% block body %}
    <a href="{{ path('app_home_page') }}"><button>Volver</button></a>
    <h1>Consulta index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Observaciones</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultum in consultas %}
            <tr>
                <td>{{ consultum.id }}</td>
                <td>{{ consultum.fecha ? consultum.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ consultum.observaciones }}</td>
                <td>
                    <a href="{{ path('app_consulta_show', {'id': consultum.id}) }}">show</a>
                    <a href="{{ path('app_consulta_edit', {'id': consultum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_consulta_new') }}">Create new</a>
    <br>
    
{% endblock %}
