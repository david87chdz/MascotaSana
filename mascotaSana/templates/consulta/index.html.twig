{% extends 'base.html.twig' %}

{% block title %}Consulta index{% endblock %}

{% block body %}
    <a href="{{ path('app_home_page') }}"><button>Volver</button></a>
    <h1>Consultas Mascota Sana</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Mascota</th>
                <th>Observaciones</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for consultum in consultas %}
            <tr>
                <td>{{ consultum.id }}</td>
                <td>{{ consultum.mascota.nombre }}</td>
                <td>{{ consultum.fecha ? consultum.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ consultum.observaciones ? consultum.observaciones : "No hay observaciones"}}</td>
                <td>
                    <a href="{{ path('app_consulta_show', {'id': consultum.id}) }}"><button>Mostrar</button></a>
                    <a href="{{ path('app_consulta_edit', {'id': consultum.id}) }}"><button>Editar</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Sin registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('app_consulta_new') }}"><button>Crear consulta</button></a>
    <br>
    
{% endblock %}
