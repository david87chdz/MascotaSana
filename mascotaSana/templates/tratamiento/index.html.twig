{% extends 'base.html.twig' %}

{% block title %}Tratamiento index{% endblock %}

{% block body %}
    <h1>Tratamiento index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Duracion</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tratamiento in tratamientos %}
            <tr>
                <td>{{ tratamiento.id }}</td>
                <td>{{ tratamiento.nombre }}</td>
                <td>{{ tratamiento.duracion }}</td>
                <td>{{ tratamiento.descripcion }}</td>
                <td>
                    <a href="{{ path('app_tratamiento_show', {'id': tratamiento.id}) }}">show</a>
                    <a href="{{ path('app_tratamiento_edit', {'id': tratamiento.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tratamiento_new') }}">Create new</a>
{% endblock %}
